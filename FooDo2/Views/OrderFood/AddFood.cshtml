@model FooDo2.Models.orderFood

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@{
    Layout = "~/Views/Shared/orderLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>orderFood @ViewBag.idTest </h4>


    <div class="form-group" style=" visibility: hidden;">
        @Html.LabelFor(model => model.idOrder, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.idOrder, new { htmlAttributes = new { @Value = ViewBag.idTest } })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.idFood, "idFood", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idFood", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idFood, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
