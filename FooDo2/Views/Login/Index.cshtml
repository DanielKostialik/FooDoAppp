@model FooDo2.Models.user
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Scripts/bootstrap.min.css" />
</head>
<body style=" background-image: url('../../Images/FooDo2_background.jpg');  ">
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>



@using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
{
<div style="width: 250px; margin: auto; margin-top:10%; background-color:dimgray;  opacity: 0.9; padding:20px;   border-radius: 5px;">
    <h1 class="form-heading" style="width: 250px; margin: auto; margin-top:10px; margin-bottom:10px;">FooDo2</h1>

    <div class="login-form">
        <div class="main-div">
            <form id="Login">
                <div class="form-group">
                    @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <center>
                <div class="forgot">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                </center>
                    <br>
                    <a href="reset.html">Forgot password?</a>
        </form>
        </div>
    </div>
</div>
}



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


</body>
</html>
