@model IEnumerable<FooDo2.Models.table>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/tableLayout.cshtml";
}

<style>

    .draggable {
        width: 150px;
        height: 150px;
        padding: 0.5em;
        position: absolute;
        width: 200px;
        height: 100px;
        border: 3px solid #73AD21;
    }

</style>

<script>
    $(function () {
        $(".draggable").draggable();
    });



</script>



<div class="relative">
    @foreach (var item in Model)
    {
        <a class="draggable" style="left: @Html.DisplayFor(modelItem => item.positionX)px; top: @Html.DisplayFor(modelItem => item.positionY)px" href="@Url.Action("Details", "Tables", new { id = item.ID })"> N. @item.number <br> size: @item.size </a>;
    }
</div>
